<% if @trainers.count(:all).zero? || @session_time == "false" %>
  $(".modal-window h1").text("Ooops!");
  $(".modal-window p.intro").text("Please check your input and try again. Workout session time might be incorrect or there is no trainer/assistant that available.");
  $(".modal-state").prop('checked', true);
<% else %>
  $(".trainer-list").html("<%=j render partial: 'list' %>");
<% end %>

$(document).ready(function() {
  
  $(".card").click(function(){
    $(".ribbon-wrapper").html("");
    trainer = $(this).data("trainer");
    $("#booker_which_trainer").val(trainer);
    $(this).find(".ribbon-wrapper").html("<div class='ribbon'>Selected</div>");
    $(".booking-fieldset").show();
    get_book();
  });
});